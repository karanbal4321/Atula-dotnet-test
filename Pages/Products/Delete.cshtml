@page "{id:int}"
@model Atula_dotnet_test.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this product?</h4>
<div>
    <h4>@Model.ProductDTO.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">
            SKU
        </dt>
        <dd class="col-sm-10">
            @Model.ProductDTO.Sku
        </dd>
        <dt class="col-sm-2">
            Categories
        </dt>
        <dd class="col-sm-10">
            @if (Model.ProductDTO.CategoryIds.Any())
            {
                var categoryNames = Model.ProductDTO.CategoryIds.Select(id => Model.CategorySelectList.FirstOrDefault(c => c.Value == id.ToString())?.Text);
                @string.Join(", ", categoryNames)
            }
            else
            {
                <span>No Categories</span>
            }
        </dd>
    </dl>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

